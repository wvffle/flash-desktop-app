{
  "package": {
    "productName": "flash-desktop-app",
    "version": "1.5.3"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "../dist",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "net.wvffle.tauri.flash",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "copyright": "Kasper Seweryn - wvffle.net",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://webhook.example.com?version={{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRFRDc2MzNGOEQwNjVENDkKUldSSlhRYU5QMlBYVHFReXFlRHFiWFNVZXhiU0VMVEVUUGZCY3F5b1NHSjZEa3V3YW53bHRtUE4K"
    },
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "title": "FLASH Panel Recepcyjny",
        "width": 1500,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
